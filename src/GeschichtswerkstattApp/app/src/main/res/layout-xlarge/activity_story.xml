<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drl.brandis.geschichtswerkstatt.activities.StoryActivity"
    android:id="@+id/main_layout"
    style="@style/mainLayoutStyle">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/toolbarStyle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dummy item to prevent EditText from receiving focus -->
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:text="BESCHREIBUNG"
                style="@style/headerText"/>

            <EditText
                android:id="@+id/edit_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing"
                android:maxLines="2"
                android:maxLength="64"
                android:hint="Story Titel"/>

            <EditText
                android:id="@+id/edit_text_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_marginTop="@dimen/spacing"
                android:layout_marginBottom="@dimen/spacing"
                android:maxLines="8"
                android:minLines="3"
                android:hint="Story Text"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:text="AUFNAHME"
                style="@style/headerText"/>

            <TextView
                android:id="@+id/recording_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keine Aufnahme"
                android:layout_marginTop="@dimen/spacing"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_marginRight="@dimen/spacing"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing"
                android:text="Record Story"
                android:onClick="onRecordButtonClicked"
                style="@style/textButtonStyle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:text="ORT"
                style="@style/headerText"/>

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kein Ort ausgewÃ¤hlt"
                android:layout_marginTop="@dimen/spacing"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_marginRight="@dimen/spacing"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing"
                android:text="Set Location"
                android:onClick="onLocationButtonClicked"
                style="@style/textButtonStyle"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:text="BILD"
                style="@style/headerText"/>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:onClick="onImageButtonClicked"
                android:background="@color/colorBgBox"
                android:layout_margin="@dimen/spacing"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/picture_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>


                <ImageView
                    android:id="@+id/image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera"
                    android:alpha="0.6"
                    android:layout_margin="@dimen/large_spacing"/>

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_spacing"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Story"
                android:onClick="onUploadButtonClicked"
                style="@style/textButtonStyle"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_spacing"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
