<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drl.brandis.geschichtswerkstatt.activities.StoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/spacing">

            <!-- Dummy item to prevent EditText from receiving focus -->
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"/>

            <EditText
                android:id="@+id/edit_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing"
                android:maxLines="2"
                android:maxLength="64"
                android:hint="Story Titel"/>

            <EditText
                android:id="@+id/edit_text_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing"
                android:maxLines="8"
                android:minLines="3"
                android:hint="Story Text"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Story"
                android:onClick="onRecordButtonClicked"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Location"
                android:onClick="onLocationButtonClicked"/>

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kein Ort ausgewÃ¤hlt"
                android:layout_margin="@dimen/spacing"/>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:onClick="onImageButtonClicked"
                android:background="@color/colorBgBox"
                android:layout_margin="@dimen/spacing"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/picture_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"/>


                <ImageView
                    android:id="@+id/image_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera"
                    android:alpha="0.6"
                    android:layout_margin="@dimen/large_spacing"/>

            </FrameLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_spacing"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Story"
                android:onClick="onUploadButtonClicked"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_spacing"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/spinner_overlay"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.7"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>


</RelativeLayout>
