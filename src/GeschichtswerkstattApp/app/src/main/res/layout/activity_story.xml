<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drl.brandis.geschichtswerkstatt.activities.StoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/spacing">

            <EditText
                android:id="@+id/edit_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing"
                android:hint="Story Titel"/>

            <EditText
                android:id="@+id/edit_text_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing"
                android:maxLines="8"
                android:minLines="3"
                android:hint="Story Text"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record Story"
                android:onClick="onRecordButtonClicked"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Take Image"
                android:onClick="onImageButtonClicked"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Location"
                android:onClick="onLocationButtonClicked"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_spacing"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Story"
                android:onClick="onUploadButtonClicked"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/large_spacing"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
